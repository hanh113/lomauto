								Grid.Row="0"
								Width="100"
								Margin="0 10 37 0"
								HorizontalAlignment="Right"
								VerticalAlignment="Center"
								DockPanel.Dock="Top"
								UseLayoutRounding="True"
								SnapsToDevicePixels="True"
								Background="#1c2f91"
								BorderBrush="#FF000000"
								BorderThickness="0"
								CornerRadius="5"
								MouseLeftButtonUp="Border_MouseLeftButtonUp_1">
                                <FrameworkElement.Style>
                                    <Style
										TargetType="{x:Type Border}">
                                        <Style.Triggers>
                                            <Trigger
												Property="local:FrameworkElementExt.IsPressed"
												Value="True">
                                                <Setter
													Property="Background"
													Value="#061873" />
                                            </Trigger>
                                            <Trigger
												Property="UIElement.IsMouseOver"
												Value="True">
                                                <Setter
													Property="UIElement.Effect"
													Value="{StaticResource ButtonShadowEffect}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </FrameworkElement.Style>
